{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": ["es5", "es2015", "es2016", "es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "baseUrl": "src",
    "rootDirs": ["src"],
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "esModuleInterop": true
  },
  "include": ["src/**.ts"],
  "exclude": ["node_modules", "dist"]
}
